%h1.fs-2 レッスン事前質問

= simple_form_for @reservation, url: reservation_lesson_question_answers_path(@reservation), method: :patch do |f|
  = f.fields_for :lesson_question_answers do |lesson_question_answer|
    = lesson_question_answer.input :id, as: :hidden, input_html: { value: lesson_question_answer.object.id }
    = lesson_question_answer.input :answer, label:  lesson_question_answer.object.question
  = f.button :submit, class: 'btn btn-primary', value: '更新する'
