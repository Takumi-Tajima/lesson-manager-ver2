%h1.fs-2= @lesson.name

.ms-auto
  .mt-3 開始日時: #{l(@lesson_date.start_at)}
  .mt-3 終了日時: #{l(@lesson_date.end_at)}
  .mt-3 定員: #{@lesson_date.capacity}
  .mt-3 予約人数: #{@lesson_date.reservations_count}
  .mt-3 URL: #{@lesson_date.url}

.mt-5
  = link_to '編集', edit_admins_lesson_lesson_date_path(@lesson, @lesson_date), class: 'btn btn-primary'
  = button_to '削除', admins_lesson_lesson_date_path(@lesson, @lesson_date), method: :delete, data: { turbo_confirm: t('views.common.confirm.destroy') }, class: 'btn btn-danger'

- if @lesson_date.reservations.present?
  .mt-5= link_to '予約ユーザー一覧へ', admins_lesson_lesson_date_reservation_users_path(@lesson, @lesson_date), class: 'btn btn-primary'
