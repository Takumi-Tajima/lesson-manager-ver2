.navbar.bg-danger
  .container-fluid
    .d-flex.align-items-center
      .navbar-brand.fs-2= link_to 'LessonManager', root_path, class: 'text-decoration-none text-white'
    %ul.navbar-nav.ms-auto
      - if admin_signed_in?
        %li.nav-item.d-flex
          .me-2.p-2= current_admin.email
          = button_to 'ログアウト', destroy_admin_session_path, method: :delete, class: 'btn btn-outline-danger'
      - else
        %li.nav-item
          = link_to 'ログイン', new_admin_session_path, class: 'btn btn-primary'
